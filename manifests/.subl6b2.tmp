
vcsrepo{"~/":
	ensure => present,
	provider => git,
	source => 'git://github.com/pawmint/beagle-setup.git',
	revision => 'puppet',
}

cron{"puppet":
	require => Vcsrepo["/etc/puppet/"],
	ensure => present,
	command => '/usr/bin/puppet apply --modulepath /etc/puppet/modules /etc/modules/,manifests/node.pp',
	user => root,
	minute => 10,
}
